{
  "Network": {
    "ListenBacklog": 100,
    "MaxConnections": 1000,
    "TcpAcceptPoolSize": 10,
    "TcpSendPoolSize": 1000,
    "TcpReceivePoolSize": 1000,
    "UdpEnabled": true,
    "UdpSendPoolSize": 50,
    "UdpReceivePoolSize": 50,
    "UdpResendIntervalMs": 300
  },
  "Heartbeat": {
    "Interval": 15,
    "PingTimeout": 5,
    "ResendIntervalMs": 300
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Cube.Core": "Debug",
      "Cube.Server.Chat": "Debug",
      "Microsoft": "Warning",
      "System": "Warning"
    },
    "Console": {
      "FormatterName": "simple",
      "TimestampFormat": "[HH:mm:ss] ",
      "SingleLine": true,
      "IncludeScopes": true
    }
  }
}